<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 그라데이션 배경 -->
    <View
        android:id="@+id/topGradient"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:background="@drawable/gradient_top_background" />

    <!-- 상단 컨트롤 -->
    <LinearLayout
        android:id="@+id/topControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/exo_icon_previous"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvVideoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Video Title"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btnCast"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Cast"
            android:src="@drawable/exo_icon_previous"
            android:visibility="gone"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:src="@drawable/exo_styled_controls_speed"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- 중앙 재생 컨트롤 -->
    <LinearLayout
        android:id="@+id/centerControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@id/exo_rew"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/center_control_background"
            android:contentDescription="@string/exo_controls_rewind_description"
            android:src="@drawable/exo_ic_rewind"
            app:tint="@color/white" />

        <ImageButton
            android:id="@id/exo_play_pause"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/center_control_background"
            android:contentDescription="@string/exo_controls_play_description"
            app:tint="@color/white" />

        <ImageButton
            android:id="@id/exo_ffwd"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="48dp"
            android:background="@drawable/center_control_background"
            android:contentDescription="@string/exo_controls_fastforward_description"
            android:src="@drawable/exo_ic_forward"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- 하단 그라데이션 배경 -->
    <View
        android:id="@+id/bottomGradient"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_bottom_background" />

    <!-- 하단 컨트롤 -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="12dp">

        <!-- Seekbar -->
        <androidx.media3.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:bar_height="3dp"
            app:played_color="@color/hearit_purple1"
            app:scrubber_color="@color/hearit_purple1"
            app:scrubber_disabled_size="0dp"
            app:scrubber_enabled_size="14dp"
            app:touch_target_height="26dp"
            app:unplayed_color="#40FFFFFF" />

        <!-- 시간 및 하단 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 시간 -->
            <TextView
                android:id="@id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="0:05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="3dp"
                android:text="/"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp"
                tools:text="29:05" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- 하단 오른쪽 버튼들 -->
            <ImageButton
                android:id="@+id/btnPlaybackSpeed"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Playback speed"
                android:src="@drawable/exo_styled_controls_speed"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnRepeatMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Repeat mode"
                android:src="@drawable/exo_styled_controls_repeat_off"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnFullscreen"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Fullscreen"
                android:src="@drawable/exo_styled_controls_fullscreen_enter"
                app:tint="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <!-- 항상 표시되는 얇은 seekbar (컨트롤러 숨김 시) -->
    <androidx.media3.ui.DefaultTimeBar
        android:id="@+id/thinSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:bar_height="2dp"
        app:played_color="@color/hearit_purple1"
        app:scrubber_disabled_size="0dp"
        app:scrubber_enabled_size="0dp"
        app:touch_target_height="20dp"
        app:unplayed_color="@color/hearit_gray2" />

</FrameLayout>